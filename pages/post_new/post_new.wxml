<!--pages/post_new/post_new.wxml-->

<form bindsubmit="formSubmit">
  <view>
    <view>Title</view>
    <input type="text" name="title"/>
  </view>
  <view>
    <view>Content</view>
    <input type="text" name="content"/>
  </view>

  <view class="button-wrapper">
    <button bindtap="takePhoto">Upload Image</button>
  </view>
  <view class="tips" wx:if="{{!images.length > 0}}" >Try to upload some images!</view>

  <view wx:if="{{images.length > 0}}" class="title">â†“ Scroll-view to display images horizontally.</view>
  <scroll-view class="album" scroll-x="{{true}}">
    <image wx:for="{{images}}" mode="aspectFit" src="{{item}}"/>
  </scroll-view>

  <view wx:if="{{images.length > 0}}"  class="button-wrapper">
    <button bindtap="preview">Preview Images</button>
  </view>

  <view>
    <view class="button-wrapper">
    <button class="long-button" bindtap="chooseLocation">Add a marker</button>
  </view>
    <map id="map1" 
    latitude="{{mapData.latitude}}" 
    longitude="{{mapData.longitude}}" 
    markers="{{markers}}" 
    scale="{{mapData.scale}}" 
    bindmarkertap="selectMarker" 
    class="map">
</map>
  </view>

  <button form-type="submit">Submit</button>
</form>
